#!/bin/bash
if [[ -d /home/Abhay ]]
then
	echo "The folder already exists"
else
	mkdir /home/Abhay
fi

cd ~/Abhay
if [[ -d /home/Abhay/cryptage ]];
then
	echo "The folder is already cloned"
else
	git clone https://github.com/AbhayGunputh/cryptage.git
fi

cd /home/Abhay/cryptage/Crypt/src/
#sudo chmod u+x crypt.sh
#sudo ./crypt.sh
#sudo chmod u+x decrypt.sh
#sudo ./decrypt.sh

#To give permission and launch the cryption and decryption
sudo cp -f /home/Abhay/cryptage/Crypt/src/crypt.sh /home/Abhay/crypt.sh
sudo chmod u+x crypt.sh
sudo cp -f /home/Abhay/cryptage/Crypt/src/crypt.sh /home/Abhay/decrypt.sh
sudo chmod u+x decrypt.sh

#copy the service to systemd
sudo cp -f /home/Abhay/cryptage/Crypt/src/crypt.service /etc/systemd/system/crypt.service
sudo cp -f /home/Abhay/cryptage/Crypt/src/decrypt.service /etc/systemd/system/decrypt.service

#Launch service
sudo systemctl daemon-reload
sudo systemctl enable crypt.service
sudo systemctl start crypt.service
sudo systemctl daemon-reload
sudo systemctl enable decrypt.service
sudo systemctl start decrypt.service

echo "Installation Completed!"
